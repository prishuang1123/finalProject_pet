@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ms-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white ps-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body mb-1 p-4 pb-5">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div asp-validation-summary="All"></div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Title" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="Title" class="ms-2"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <textarea asp-for="Description" type="text" class="form-control border-0 shadow" disabled></textarea>
                <label asp-for="Description" class="ms-2"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ISBN" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="ISBN" class="ms-2"></label>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Author" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="Author" class="ms-2"></label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="ListPrice" class="ms-2"></label>
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="Price" class="ms-2"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price50" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="Price50" class="ms-2"></label>
                <span asp-validation-for="Price50" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price100" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="Price100" class="ms-2"></label>
                <span asp-validation-for="Price100" class="text-danger"></span>
            </div>
            <div class="row">
                @* <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Save</button>
                </div> *@
                <div class="col-6 col-md-3 pb-1">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                        Back to list
                    </a>
                </div>
            </div>


        </form>
    </div>
</div>





@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}