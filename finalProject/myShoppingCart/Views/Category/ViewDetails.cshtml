@model Category
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ms-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white ps-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body mb-1 p-4 pb-5">
        <form method="post" class="row">
            <input asp-for="categoryId" hidden />
            <div asp-validation-summary="All"></div>
            <div class="form-floating py-2 col-12">
                <input asp-for="categoryName" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="categoryName" class="ms-2"></label>
                <span asp-validation-for="categoryName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="categoryDesc" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="categoryDesc" class="ms-2"></label>
                <span asp-validation-for="categoryDesc" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="createdAt" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="createdAt" class="ms-2"></label>
                <span asp-validation-for="createdAt" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="modifiedAt" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="modifiedAt" class="ms-2"></label>
                <span asp-validation-for="modifiedAt" class="text-danger"></span>
            </div>
            <div class="row">
                @* <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Save</button>
                </div> *@
                <div class="col-6 col-md-3 pb-1">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                        Back to list
                    </a>
                </div>
            </div>


        </form>
    </div>
</div>





@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}