@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Create Category</h2>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3 row p-1">
        <label asp-for="categoryName" class="p-0"></label>
        <input asp-for="categoryName" type="text" class="form-control"/>
        <span asp-validation-for="categoryName" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1"> 
        <label asp-for="categoryDesc" class="p-0"></label>
        <input asp-for="categoryDesc" type="text" class="form-control" />
        <span asp-validation-for="categoryDesc" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Create</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                Back to list
            </a>
        </div>
    </div>
    
    
</form>